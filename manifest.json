{
  "manifest_version": 2,
  "name": "a_sauvons_ayoub",
  "version": "1.1",
  "description": "Try to take an appointements in Nanterre prefecture ",
  "homepage_url": "https://gitlab.navya.tech/amin.soufari/web_extensions",
  "icons": {
    "48": "icons/chillout-48.png"
  },

  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],

  "page_action": {
    "default_icon": "icons/chillout-32.png",
    "default_title": "Chill out"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
